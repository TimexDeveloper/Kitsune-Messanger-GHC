# Environment variables for Fox Messenger

# NextAuth Configuration
NEXTAUTH_SECRET=your_secret_key_here_change_in_production
NEXTAUTH_URL=http://localhost:3000

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/fox_messenger

# Vercel Postgres (use this instead of DATABASE_URL for Vercel)
POSTGRES_PRISMA_URL=
POSTGRES_URL_NON_POOLING=
POSTGRES_HOST=
POSTGRES_PASSWORD=
POSTGRES_USER=
POSTGRES_DATABASE=

# Vercel KV (for caching/sessions)
KV_URL=
KV_REST_API_URL=
KV_REST_API_TOKEN=

# Image Upload Storage
# Option 1: Vercel Blob (recommended)
BLOB_READ_WRITE_TOKEN=

# Option 2: Alternative storage provider
STORAGE_API_KEY=
STORAGE_API_URL=

# OAuth Providers (Optional, for future expansion)
GITHUB_ID=
GITHUB_SECRET=
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Application Settings
NEXT_PUBLIC_APP_NAME=Fox Messenger
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development
